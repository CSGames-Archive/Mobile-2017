<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mirego.cschat"
          xmlns:android="http://schemas.android.com/apk/res/android"> <!-- TODO: Changer pour votre prore package -->

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".CSChatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.mirego.cschat.activities.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.mirego.cschat.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name="com.mirego.cschat.activities.ConversationsActivity"
                  android:screenOrientation="portrait"/>


        <activity android:name="com.mirego.cschat.activities.ConversationActivity"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>
